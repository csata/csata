<%= form_tag({:action => "edit"}, :id => params[:id]) do %>
  <table>
    <tr>
      <td>
        <label>
          Название: *
        </label>
      </td>
    
      <td id = "td_name" <%= "style = 'background: red'" if flash[:name] %> >
        <%= text_field_tag :name, @post.name %>
      </td>

      <td id = "error_name" style="color: red;">
	<%= flash[:name] if flash[:name] %>
      </td>
    </tr>

    <tr>
      <td colspan = "2">
        <%= submit_tag "изменить" %>
      </td>
    </tr>
  </table>
<% end %>
<%= link_to("назад", { :controller => 'admin/dictonary/post', :action => 'index' }) %>
